<center> <h1>New Event</h1>

<%= form_for @event, class: "form-horizontal" do |f| %>

<% if @event.errors.any? %>
                <div class="alert alert-danger">
                    <div id="error_explanation">
                        <p> <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</p>   
                            <ul>
                                <% @event.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>              
                                <% end %>
                            </ul>
                    </div>
                </div>
              <% end %>

<div class="form-group">
<%= f.label :title, "Title", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.text_field :title, class: 'form-control' %>
 </div>
  </div>

<div class="form-group">
<%= f.label :description, "Description", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.text_field :description, class: 'form-control' %>
 </div>
  </div>

  <div class="form-group">
<%= f.label :duration, "Duration", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.number_field :duration, class: 'form-control' %>
 </div>
  </div>

    <div class="form-group">
<%= f.label :price, "Price", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.number_field :price, class: 'form-control' %>
 </div>
  </div>

  <div class="form-group">
<%= f.label :location, "Location", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.text_field :location, class: 'form-control' %>
 </div>
  </div>

  <div class="form-group">
<%= f.label :start_date, "Starting Date", class: 'col-md4 control-label' %>
<div class="col-md-6">
  <%= f.datetime_field :start_date, class: 'form-control' %>
 </div>
  </div>

        <div class="actions mt-5 mb-4">
                <%= f.submit "Creer un nouvel evenement", class:"btn btn-md btn-primary btn-block text-uppercase" %>
        </div>
        <div class="actions mt-5 mb-4">
                <%= link_to 'Back', events_path , class:"btn btn-md btn-primary btn-block text-uppercase"  %>
        </div>
  <% end %>

  </center>